<div class="booyah-box col-10 offset-1">
  <div class="row">
    <div class="col-4">
      <%= image_tag 'user.png' %>
    </div>

    <div class="col-8">
      <div class="float-right">
        <h1>User Dashboard</h1>
        <h2><%= @user.email %></h2>
        <h3>Member since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
        <br />
        <h4><%= @user.comments.count %> total comments</h4>
        <h4><%= @user.comments.where(rating: '5_stars').count %> total 5-star reviews</h4>
      </div>
    </div>
  </div>
<div class="clear"></div>
</div>
<br /><br />
<h1 class="text-center">My Comments</h1>
<br /><br />
<div class="row">
  <% @user.comments.each do |comment| %>
    <div class="col-12 col-sm-6">
      <h2 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h2>
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b>
        <% end %>
        <%= comment.message %>
      </blockquote>
    </div>
  <% end %>
</div>

<div class="clear"></div>

<br /><br />
<h1 class="text-center">My Places</h1>
<br /><br />
<% @user.places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h2><%= link_to place.name, place_path(place) %></h2><br />
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p>
    
    <div class="place_photo col-12">
    <% if place.photos.present? %>
      <%= image_tag place.photos.last.picture.url, class: 'img-fluid' %>
    <% end %>
    </div>

    <% if place.comments.present? %>
      <div class="col-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= truncate(place.comments.last.message, :length => 35) %>
          <br />
          -<small><%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>

  </div>
<% end %>
